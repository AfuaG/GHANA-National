<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.0.xsd">
    <http use-expressions="true">
        <intercept-url pattern="/admin/**" access="hasRole('System Developer')" requires-channel="any"/>
        <intercept-url pattern="/callcenter/**" access="hasAnyRole('System Developer','Create/Edit MoTeCH Data','Provider')" requires-channel="any"/>
        <intercept-url pattern="/facility/**" access="hasAnyRole('System Developer','MoTeCH View Only','Provider')" requires-channel="any"/>
        <intercept-url pattern="/security/**" access="hasAnyRole('System Developer','MoTeCH View Only', 'Create/Edit MoTeCH Data')" requires-channel="any"/>
        <form-login authentication-success-handler-ref="authenticationSuccessHandler"/>
        <logout logout-url="/logout" logout-success-url="/spring_security_login"/>
    </http>
    <authentication-manager>
        <authentication-provider ref="openMRSAuthenticationProvider"/>
    </authentication-manager>

    <beans:bean id="authenticationSuccessHandler" class="org.motechproject.ghana.national.web.security.LoginSuccessHandler"/>
</beans:beans>