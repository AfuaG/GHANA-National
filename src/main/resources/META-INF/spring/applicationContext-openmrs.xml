<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="context" class="org.ghana.national.openmrs.Context" init-method="initialize">
        <constructor-arg value="jdbc:mysql://${openmrs.host}:3306/${openmrs.database}?autoReconnect=true"/>
        <constructor-arg value="${db.username}"/>
        <constructor-arg value="${db.password}"/>
        <constructor-arg value="${openmrs.username}"/>
        <constructor-arg value="${openmrs.password}"/>
    </bean>

    <bean id="serviceContext"  class="org.openmrs.api.context.ServiceContext"  factory-bean="context" factory-method="getServiceContext"/>

    <bean class="org.openmrs.api.PatientService" factory-bean="serviceContext" factory-method="getPatientService"/>
</beans>