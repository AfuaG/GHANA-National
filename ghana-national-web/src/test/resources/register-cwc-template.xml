<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xf:xforms xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="12">
    <xf:model>
        <xf:instance id="CWCRegistration">
            <CWCRegistration id="12" name="Reg-CWC">
                <staffId/>
                <facilityId/>
                <motechId/>
                <registrationToday/>
                <registrationDate/>
                <serialNumber/>
                <addHistory/>
                <addCareHistory/>
                <bcgDate/>
                <lastOPV/>
                <lastOPVDate/>
                <lastPenta/>
                <lastPentaDate/>
                <measlesDate/>
                <yellowFeverDate/>
                <lastIPTi/>
                <lastIPTiDate/>
                <lastVitaminADate/>
                <formtype>data_entry</formtype>
                <formname>registerCWC</formname>
            </CWCRegistration>
        </xf:instance>
        <xf:bind id="staffId" nodeset="/CWCRegistration/staffId" required="true()" type="xsd:int"
                 constraint=". &lt; 2147483647" message="Number too large. Keep under 2147483647"/>
        <xf:bind id="facilityId" nodeset="/CWCRegistration/facilityId" required="true()" type="xsd:int"
                 constraint=". &lt; 2147483647" message="Number too large. Keep under 2147483647"/>
        <xf:bind id="motechId" nodeset="/CWCRegistration/motechId" required="true()" type="xsd:int"
                 constraint=". &gt; 999999 and . &lt; 10000000" message="MoTeCH ID must be 7 digits long"/>
        <xf:bind id="registrationToday" nodeset="/CWCRegistration/registrationToday" required="true()"
                 type="xsd:string"/>
        <xf:bind constraint=". &lt;= 'today()'" id="registrationDate"
                 message="Invalid date: date entered is in the future"
                 nodeset="/CWCRegistration/registrationDate" required="true()" type="xsd:date"/>
        <xf:bind id="serialNumber" nodeset="/CWCRegistration/serialNumber" type="xsd:string" required="true()"/>
       <xf:bind id="addHistory" nodeset="/CWCRegistration/addHistory"
                 type="xsd:string" visible="true()" action="show" required="true()"/>
        <xf:bind id="addCareHistory" nodeset="/CWCRegistration/addCareHistory"
                 relevant="/CWCRegistration/addHistory ='1'"
                 type="xsd:string" visible="false()" action="show" required="true()"/>
         <xf:bind id="lastVitaminADate" nodeset="/CWCRegistration/lastVitaminADate" type="xsd:date"
                 visible="false()"
                 relevant="/CWCRegistration/addCareHistory = '1' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()" constraint=". &lt;= 'today()'"
                 message="Invalid date: date specified is in the future"/>
          <xf:bind id="lastIPTi" nodeset="/CWCRegistration/lastIPTi" type="xsd:string" visible="false()"
                 relevant="/CWCRegistration/addCareHistory= '2' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()"/>
        <xf:bind id="lastIPTiDate" nodeset="/CWCRegistration/lastIPTiDate" type="xsd:date"
                 visible="false()"
                 constraint=". &lt;= 'today()'" message="Invalid date: date specified is in the future"
                 relevant="/CWCRegistration/addCareHistory = '2' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()"/>
        <xf:bind id="bcgDate" nodeset="/CWCRegistration/bcgDate" type="xsd:date" visible="false()"
                 relevant="/CWCRegistration/addCareHistory= '3' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()" constraint=". &lt;= 'today()'"
                 message="Invalid date: date specified is in the future"/>
        <xf:bind id="lastOPV" nodeset="/CWCRegistration/lastOPV" type="xsd:string" visible="false()"
                 relevant="/CWCRegistration/addCareHistory = '4' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()"/>
        <xf:bind id="lastOPVDate" nodeset="/CWCRegistration/lastOPVDate" type="xsd:date"
                 visible="false()"
                 relevant="/CWCRegistration/addCareHistory = '4' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()" constraint=". &lt;= 'today()'"
                 message="Invalid date: date specified is in the future"/>
        <xf:bind id="lastPenta" nodeset="/CWCRegistration/lastPenta" type="xsd:string" visible="false()"
                 relevant="/CWCRegistration/addCareHistory  = '5' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()"/>
        <xf:bind id="lastPentaDate" nodeset="/CWCRegistration/lastPentaDate" type="xsd:date"
                 visible="false()"
                 relevant="/CWCRegistration/addCareHistory  = '5' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()" constraint=". &lt;= 'today()'"
                 message="Invalid date: date specified is in the future"/>
        <xf:bind id="measlesDate" nodeset="/CWCRegistration/measlesDate" type="xsd:date"
                 visible="false()"
                 relevant="/CWCRegistration/addCareHistory = '6' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()" constraint=". &lt;= 'today()'"
                 message="Invalid date: date specified is in the future"/>
        <xf:bind id="yellowFeverDate" nodeset="/CWCRegistration/yellowFeverDate" type="xsd:date"
                 visible="false()" constraint=". &lt;= 'today()'"
                 message="Invalid date: date specified is in the future"
                 relevant="/CWCRegistration/addCareHistory
            = '7' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()"/>
        <xf:bind id="formtype" nodeset="/CWCRegistration/formtype" required="true()" type="xsd:string"
                 visible="false()"/>
        <xf:bind id="formname" nodeset="/CWCRegistration/formname" required="true()" type="xsd:string"
                 visible="false()"/>
    </xf:model>
    <xf:group id="1">
        <xf:input bind="staffId">
            <xf:label>Staff ID</xf:label>
        </xf:input>
        <xf:input bind="facilityId">
            <xf:label>Facility ID</xf:label>
        </xf:input>
        <xf:input bind="motechId">
            <xf:label>MoTeCH ID</xf:label>
        </xf:input>
        <xf:select1 bind="registrationToday">
            <xf:label>Registration Today</xf:label>
            <xf:item id="Today">
                <xf:label>Today</xf:label>
                <xf:value>TODAY</xf:value>
            </xf:item>
            <xf:item id="In the past">
                <xf:label>In the past</xf:label>
                <xf:value>IN_PAST</xf:value>
            </xf:item>
            <xf:item id="In the past in other facility">
                <xf:label>In the past in other facility</xf:label>
                <xf:value>IN_PAST_IN_OTHER_FACILITY</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="registrationDate">
            <xf:label>Registration date</xf:label>
        </xf:input>
        <xf:input bind="serialNumber">
            <xf:label>Serial Number</xf:label>
        </xf:input>
        <xf:select1 bind="addHistory">
            <xf:label>Add History</xf:label>
            <xf:item id="1">
                <xf:label>Yes</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>No</xf:label>
                <xf:value>0</xf:value>
            </xf:item>
        </xf:select1>
        <xf:select bind="addCareHistory">
            <xf:label>Add Care History</xf:label>
            <xf:item id="1">
                <xf:label>Vit A (Ch)</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>IPTi (Ch)</xf:label>
                <xf:value>2</xf:value>
            </xf:item>
            <xf:item id="3">
                <xf:label>BCG</xf:label>
                <xf:value>3</xf:value>
            </xf:item>
            <xf:item id="4">
                <xf:label>OPV</xf:label>
                <xf:value>4</xf:value>
            </xf:item>
            <xf:item id="5">
                <xf:label>Penta</xf:label>
                <xf:value>5</xf:value>
            </xf:item>
            <xf:item id="6">
                <xf:label>Measles</xf:label>
                <xf:value>6</xf:value>
            </xf:item>
            <xf:item id="7">
                <xf:label>YF</xf:label>
                <xf:value>7</xf:value>
            </xf:item>
        </xf:select>
        <xf:input bind="bcgDate">
            <xf:label>BCG date</xf:label>
        </xf:input>

        <xf:select1 bind="lastOPV">
            <xf:label>Last OPV</xf:label>
            <xf:item id="0">
                <xf:label>OPV 0</xf:label>
                <xf:value>0</xf:value>
            </xf:item>
            <xf:item id="1">
                <xf:label>OPV 1</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>OPV 2</xf:label>
                <xf:value>2</xf:value>
            </xf:item>
            <xf:item id="3">
                <xf:label>OPV 3</xf:label>
                <xf:value>3</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="lastOPVDate">
            <xf:label>Last OPV date</xf:label>
        </xf:input>
        <xf:select1 bind="lastPenta">
            <xf:label>Last Penta</xf:label>
            <xf:item id="1">
                <xf:label>Penta 1</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>Penta 2</xf:label>
                <xf:value>2</xf:value>
            </xf:item>
            <xf:item id="3">
                <xf:label>Penta 3</xf:label>
                <xf:value>3</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="lastPentaDate">
        <xf:label>Last Penta date</xf:label>
        </xf:input>
        <xf:input bind="measlesDate">
            <xf:label>Measles date</xf:label>
        </xf:input>
        <xf:input bind="yellowFeverDate">
            <xf:label>YF date</xf:label>
        </xf:input>
        <xf:select1 bind="lastIPTi">
            <xf:label>Last IPTi</xf:label>
            <xf:item id="1">
                <xf:label>IPTi 1</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>IPTi 2</xf:label>
                <xf:value>2</xf:value>
            </xf:item>
            <xf:item id="3">
                <xf:label>IPTi 3</xf:label>
                <xf:value>3</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="lastIPTiDate">
            <xf:label>Last IPT date</xf:label>
        </xf:input>
        <xf:input bind="lastVitaminADate">
            <xf:label>Last Vit A date</xf:label>
        </xf:input>
    </xf:group>
</xf:xforms>