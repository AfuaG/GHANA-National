<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xf:xforms xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="12">
    <xf:model>
        <xf:instance id="CWCRegistration">
            <CWCRegistration id="12" name="Reg-CWC">
                <staffId/>
                <facilityId/>
                <motechId/>
                <registrationToday/>
                <registrationDate/>
                <serialNumber/>
                <addHistory/>
                <addCareHistory/>
                <lastIPT/>
                <lastIPTDate/>
                <lastTT/>
                <lastTTDate/>
                <formtype>data_entry</formtype>
                <formname>registerCWC</formname>
            </CWCRegistration>
        </xf:instance>
        <xf:bind id="staffId" nodeset="/CWCRegistration/staffId" required="true()" type="xsd:int"
                 constraint=". &lt; 2147483647" message="Number too large. Keep under 2147483647"/>
        <xf:bind id="facilityId" nodeset="/CWCRegistration/facilityId" required="true()" type="xsd:int"
                 constraint=". &lt; 2147483647" message="Number too large. Keep under 2147483647"/>
        <xf:bind id="motechId" nodeset="/CWCRegistration/motechId" required="true()" type="xsd:int"
                 constraint=". &gt; 999999 and . &lt; 10000000" message="MoTeCH ID must be 7 digits long"/>
        <xf:bind id="registrationToday" nodeset="/CWCRegistration/registrationToday" required="true()"
                 type="xsd:string"/>
        <xf:bind constraint=". &lt;= 'today()'" id="registrationDate"
                 message="Invalid date: date entered is in the future"
                 nodeset="/CWCRegistration/registrationDate" required="true()" type="xsd:date"/>
        <xf:bind id="serialNumber" nodeset="/CWCRegistration/serialNumber" type="xsd:string" required="true()"/>
        <xf:bind id="addHistory" nodeset="/CWCRegistration/addHistory" type="xsd:string" required="true()"/>
        <xf:bind id="addCareHistory" nodeset="/CWCRegistration/addCareHistory"
                 relevant="/CWCRegistration/addHistory = '1'" type="xsd:string" visible="false()" action="show"
                 required="true()"/>
        <xf:bind id="lastIPT" nodeset="/CWCRegistration/lastIPT" type="xsd:string" visible="false()"
                 relevant="/CWCRegistration/addCareHistory = '1' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()"/>
        <xf:bind id="lastIPTDate" nodeset="/CWCRegistration/lastIPTDate" type="xsd:date" visible="false()"
                 constraint=". &lt;= 'today()'" message="Invalid date: date specified is in the future"
                 relevant="/CWCRegistration/addCareHistory = '1' and /CWCRegistration/addHistory = '1'" action="show"
                 required="true()"/>
        <xf:bind id="lastTT" nodeset="/CWCRegistration/lastTT" type="xsd:string" visible="false()"
                 relevant="/CWCRegistration/addCareHistory = '2' and /CWCRegistration/addHistory = '1'"
                 action="show" required="true()"/>
        <xf:bind id="lastTTDate" nodeset="/CWCRegistration/lastTTDate" type="xsd:date" visible="false()" action="show"
                 constraint=". &lt;= 'today()'"
                 message="Invalid date: date specified is in the future"
                 relevant="/CWCRegistration/addCareHistory = '2' and /CWCRegistration/addHistory = '1'"
                 required="true()"/>
        <xf:bind id="formtype" nodeset="/CWCRegistration/formtype" required="true()" type="xsd:string"
                 visible="false()"/>
        <xf:bind id="formname" nodeset="/CWCRegistration/formname" required="true()" type="xsd:string"
                 visible="false()"/>
    </xf:model>
    <xf:group id="1">
        <xf:input bind="staffId">
            <xf:label>Staff ID</xf:label>
        </xf:input>
        <xf:input bind="facilityId">
            <xf:label>Facility ID</xf:label>
        </xf:input>
        <xf:input bind="motechId">
            <xf:label>MoTeCH ID</xf:label>
        </xf:input>
        <xf:select1 bind="registrationToday">
            <xf:label>Registration Today</xf:label>
            <xf:item id="Today">
                <xf:label>Today</xf:label>
                <xf:value>TODAY</xf:value>
            </xf:item>
            <xf:item id="In the past">
                <xf:label>In the past</xf:label>
                <xf:value>IN_PAST</xf:value>
            </xf:item>
            <xf:item id="In the past in other facility">
                <xf:label>In the past in other facility</xf:label>
                <xf:value>IN_PAST_IN_OTHER_FACILITY</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="registrationDate">
            <xf:label>Registration date</xf:label>
        </xf:input>
        <xf:input bind="serialNumber">
            <xf:label>Serial Number</xf:label>
        </xf:input>
        <xf:select1 bind="addHistory">
            <xf:label>Add History</xf:label>
            <xf:item id="1">
                <xf:label>Yes</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>No</xf:label>
                <xf:value>0</xf:value>
            </xf:item>
        </xf:select1>
        <xf:select bind="addCareHistory">
            <xf:label>Add Care History</xf:label>
            <xf:item id="1">
                <xf:label>IPT</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>TT</xf:label>
                <xf:value>2</xf:value>
            </xf:item>
        </xf:select>
        <xf:select1 bind="lastIPT">
            <xf:label>Last IPT</xf:label>
            <xf:item id="1">
                <xf:label>IPT 1</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>IPT 2</xf:label>
                <xf:value>2</xf:value>
            </xf:item>
            <xf:item id="3">
                <xf:label>IPT 3</xf:label>
                <xf:value>3</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="lastIPTDate">
            <xf:label>Last IPT date</xf:label>
        </xf:input>
        <xf:select1 bind="lastTT">
            <xf:label>Last TT</xf:label>
            <xf:item id="1">
                <xf:label>TT 1</xf:label>
                <xf:value>1</xf:value>
            </xf:item>
            <xf:item id="2">
                <xf:label>TT 2</xf:label>
                <xf:value>2</xf:value>
            </xf:item>
            <xf:item id="3">
                <xf:label>TT 3</xf:label>
                <xf:value>3</xf:value>
            </xf:item>
            <xf:item id="4">
                <xf:label>TT 4</xf:label>
                <xf:value>4</xf:value>
            </xf:item>
            <xf:item id="5">
                <xf:label>TT 5</xf:label>
                <xf:value>5</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="lastTTDate">
            <xf:label>Last TT Date</xf:label>
        </xf:input>
        <xf:input bind="formtype">
            <xf:label>formType</xf:label>
        </xf:input>
        <xf:input bind="formname">
            <xf:label>formName</xf:label>
        </xf:input>
    </xf:group>
</xf:xforms>