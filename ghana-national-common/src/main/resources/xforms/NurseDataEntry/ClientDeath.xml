<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xf:xforms xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="7">
  <xf:model>
    <xf:instance id="death">
      <death id="7" name="Client Death">
        <staffId/>
        <facilityId/>
        <date/>
        <motechId/>
        <formtype>data_entry</formtype>
        <formname>clientDeath</formname>
      </death>
    </xf:instance>
    <xf:bind id="staffId" nodeset="/clientDeath/staffId" required="true()" type="xsd:int" constraint=". &lt; 2147483647" message="Number too large. Keep under 2147483647"/>
    <xf:bind id="facilityId" nodeset="/clientDeath/facilityId" required="true()" type="xsd:int" constraint=". &lt; 2147483647" message="Number too large. Keep under 2147483647"/>
    <xf:bind constraint=". &lt;= 'today()'" id="date" message="Invalid date: date specified is in the future" nodeset="/clientDeath/date" required="true()" type="xsd:date"/>
    <xf:bind id="motechId" nodeset="/clientDeath/motechId" required="true()" type="xsd:int" constraint=". &gt; 999999 and . &lt; 10000000" message="MoTeCH ID must be 7 digits long"/>
    <xf:bind id="formtype" nodeset="/clientDeath/formtype" required="true()" type="xsd:string" visible="false()"/>
    <xf:bind id="formname" nodeset="/clientDeath/formname" required="true()" type="xsd:string" visible="false()"/>
  </xf:model>
  <xf:group id="1">
    <xf:label>Page3</xf:label>
    <xf:input bind="staffId">
      <xf:label>Staff ID</xf:label>
    </xf:input>
    <xf:input bind="facilityId">
      <xf:label>Facility ID</xf:label>
    </xf:input>
    <xf:input bind="date">
      <xf:label>Date of death</xf:label>
    </xf:input>
    <xf:input bind="motechId">
      <xf:label>MoTeCH ID</xf:label>
    </xf:input>
    <xf:input bind="formtype">
      <xf:label>formType</xf:label>
    </xf:input>
    <xf:input bind="formname">
      <xf:label>formName</xf:label>
    </xf:input>
  </xf:group>
</xf:xforms>