<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xf:xforms xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="21">
    <xf:model>
        <xf:instance id="pat-query">
            <pat-query id="21" name="Client Query">
                <staffId/>
                <facilityId/>
                <queryType/>
                <motechId/>
                <sender/>
                <formname>clientQuery</formname>
                <formtype>query</formtype>
            </pat-query>
        </xf:instance>
        <xf:bind id="staffId" nodeset="/pat-query/staffId" required="true()" type="xsd:int" constraint=". &lt; 2147483647"
                 message="Number too large. Keep under 2147483647"/>
        <xf:bind id="facilityId" nodeset="/pat-query/facilityId" required="true()" type="xsd:int"
                 constraint=". &lt; 2147483647" message="Number too large. Keep under 2147483647"/>
        <xf:bind id="queryType" nodeset="/pat-query/queryType" required="true()" type="xsd:string" />
        <xf:bind action="show" id="motechId" nodeset="/pat-query/motechId" relevant="/pat-query/queryType = 'clientDetailsForm'"
                 required="true()" type="xsd:int" constraint=". &gt; 999999 and . &lt; 10000000" message="MoTeCH ID must be 7 digits long" visible="false()"/>
        <xf:bind id="sender" constraint=". &lt;= 999999999" message="Number too large. It should be 10 digits long"
                 nodeset="/pat-query/sender" required="true()" type="xsd:int"/>
        <xf:bind id="formname" nodeset="/pat-query/formname" required="true()" type="xsd:string" visible="false()" />
        <xf:bind id="formtype" nodeset="/pat-query/formtype" required="true()" type="xsd:string" visible="false()"/>
    </xf:model>
    <xf:group id="1">
        <xf:label>Page2</xf:label>
        <xf:input bind="staffId">
            <xf:label>Staff ID</xf:label>
        </xf:input>
        <xf:input bind="facilityId">
            <xf:label>Facility ID</xf:label>
        </xf:input>
        <xf:select1 bind="queryType">
            <xf:label>Query type</xf:label>
            <xf:item id="clientDetailsForm">
                <xf:label>Client details</xf:label>
                <xf:value>clientDetailsForm</xf:value>
            </xf:item>
        </xf:select1>
        <xf:input bind="motechId">
            <xf:label>MoTeCH ID</xf:label>
        </xf:input>
        <xf:input bind="sender">
            <xf:label>Response phone number</xf:label>
        </xf:input>
        <xf:input bind="formname">
            <xf:label>formname</xf:label>
        </xf:input>
        <xf:input bind="formtype">
            <xf:label>formType</xf:label>
        </xf:input>
    </xf:group>
</xf:xforms>
